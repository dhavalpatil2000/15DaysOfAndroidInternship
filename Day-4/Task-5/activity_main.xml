<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Marks"
        android:layout_centerHorizontal="true"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
         />
    <TextView
        android:id="@+id/tvCpp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="C++:"
        android:textSize="20dp"
        android:layout_below="@id/tvTitle"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText

        android:layout_below="@id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvCpp"
        android:id="@+id/etCpp"
        android:inputType="numberDecimal"
         />


    <TextView
        android:id="@+id/tvOs"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="OS:"
        android:textSize="20dp"
        android:layout_below="@id/tvCpp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:inputType="numberDecimal"
        android:layout_below="@id/tvCpp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvOs"
        android:id="@+id/etOS"
        />
    <TextView
        android:id="@+id/tvCN"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CN:"
        android:textSize="20dp"
        android:layout_below="@id/tvOs"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        />
    <EditText
        android:id="@+id/etCN"
        android:layout_below="@id/tvOs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvCN"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/tvDBMS"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="DBMS:"
        android:textSize="20dp"
        android:layout_below="@id/tvCN"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/etDBMS"
        android:layout_below="@id/tvCN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvDBMS"
        android:inputType="numberDecimal"
        />
    <TextView
        android:id="@+id/tvCG"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="CG:"
        android:textSize="20dp"
        android:layout_below="@id/tvDBMS"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />
    <EditText
        android:id="@+id/etCG"
        android:layout_below="@id/tvDBMS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/tvCG"
        android:inputType="numberDecimal"
        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btnPercentage"
        android:text="Calculate Percentage"
        android:textAllCaps="false"
        android:layout_below="@id/tvCG"
        />
    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnPercentage"
        android:layout_centerHorizontal="true"
        />


</RelativeLayout>